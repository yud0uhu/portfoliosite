---
import NavLink from "./NavLink.astro"
import { Image } from 'astro:assets';

---

<div class="w-full justify-start items-start gap-2.5 inline-flex">
  <div
    class="w-full h-screen bg-gradient-to-b from-teal-500 via-emerald-300 to-yellow-50"
  >
  </div>

  <!-- Hamburger Menu Container -->
  <div class="md:hidden absolute top-2 right-2 cursor-pointer">
    <!-- Hamburger menu icon or toggle button -->
    <div>☰</div>
  </div>

  <div class="hidden md:block md:right-0 right-[861px] top-[29px] absolute">
    <!-- Navigation Links (Visible on Desktop) -->
    <div class="w-96 h-8 justify-start items-start gap-16 inline-flex">
      <div class="mx-16 gap-x-8 inline-flex">
        <NavLink href="/about/" text="about" />
        <NavLink href="/work/" text="work" />
        <NavLink href="/work/" text="feed" />
      </div>
      
    </div>
  </div>

  <!-- Mobile Navigation Links (Initially Hidden) -->
  <div
    class="hidden md:hidden absolute top-14 right-2 w-40 bg-white border border-gray-300 p-2 rounded"
  >
  <div class="mx-16 gap-x-8 inline-flex">
    <NavLink href="/about/" text="about" />
    <NavLink href="/work/" text="work" />
    <NavLink href="/work/" text="feed" />
  </div>
  </div>

  <div
    class="w-full absolute flex flex-col items-center justify-center top-[156px]"
  >
    <div class="text-stroke text-8xl">about me</div>
    <Image src="/images/Icon.jpeg"
      class="mt-4 rounded-full"
      alt="アイコン"
      width={200}
      height={200}
    />
    <p class="text-xl font-normal mt-4">トライフォースの勇者です</p>
  </div>
</div>

<style>
  .text-stroke {
    color: #fefbeb;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: text-stroke;
    font-family: 'Monomaniac One';
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  p {
    font-family: 'Noto Sans JP';
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuIcon = document.querySelector('.top-2.right-2.cursor-pointer')
    const mobileMenu = document.querySelector(
      '.md\\:hidden.absolute.top-14.right-2'
    )

    menuIcon?.addEventListener('click', function () {
      mobileMenu?.classList.toggle('hidden')
    })
  })
</script>
