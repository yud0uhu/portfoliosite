---
import MelonSodaAnimation from './MelonSodaAnimation.svelte'
import { cn } from "../lib/utils.ts"
---
<div class={cn(["relative", "w-fit", "h-screen","content-center"])}>
  <MelonSodaAnimation client:only />
  <nav class={cn(["z-10","nav-links", "h-28", "bg-opacity-20", "bg-gray-300", "rounded-full", "flex", "flex-col", "justify-center", "items-center"])}>
    <div class={cn(["mx-16", "gap-x-8", "inline-flex"])}>
      <p class={cn(["hover:text-[#FF4F4B]", "text-[#FEFBEB]", "md:text-xl", "text-sm", "italic", "hover:underline"])}>
